#!/bin/sh
cd ~/myRepos/reta
echo aktueller Branch: `git branch | grep '*' | awk '{print $2}'`
echo In den Feature Branch wechseln oder Master ? m f체r master und f f체r feature, alles andere 채ndert nichts
echo Es wird empfohlen Programmierungen im Feature-Branch durchzuf체hren und csvs input im master branch
read branchwechslung
[ $branchwechslung = "m" ] && git switch master && sleep 2
[ $branchwechslung = "f" ] && git switch feature && sleep 2
file=`ls -r | grep -e '\.nvim$' | fzf`
if [ "$file" != "" ];then
  nvim -S $file
fi
